<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chart"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            tools:layout_constraintRight_creator="1"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="13dp"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/spinGrafici"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/txtTitoloGrafici"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="@string/Titolo_activity_grafici"
            android:textSize="25sp"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_constraintRight_creator="1"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            tools:layout_constraintLeft_creator="1" />

        <Spinner
            android:id="@+id/spinGrafici"
            android:layout_width="159dp"
            android:layout_height="29dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="9dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtTitoloGrafici"
            android:layout_marginEnd="8dp" />

    </android.support.constraint.ConstraintLayout>
</LinearLayout>